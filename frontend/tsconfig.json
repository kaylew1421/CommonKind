{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },
    "allowJs": true,
    "useDefineForClassFields": false,
    "noEmit": true
  },
  "include": ["**/*.ts", "**/*.tsx", "frontend/vite-env.d.ts"],
  "exclude": ["node_modules", "dist"]
}

